{
    "name": "Export Scoutbook",
	"version": "0.2.1",
	"description": "Exports Scoutbook reports as an Excel file",
	"author": "Chris Pilko",
	"icons": { 	"16": "images/logo_16.png",
				"48": "images/logo_48.png",
			   "128": "images/logo_128.png"
	},
	"permissions": [
	   "declarativeContent", "activeTab"
	],
	"background": {
	   "scripts": ["background.js"],
